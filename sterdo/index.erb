        <a href="<%= post[1][:out] %>" class="permalink">#</a>
        <a href="<%= post[1][:out] %>" class="go"><%= post[1][:title] %></a>

        <div class="info">This was posted on <%= post[1][:date] %></div>

      </div>
      <% end %>

      <br /><br />

      <!-- all content, scripts -->
      <% @scriptarr.each do |script| %>
      <div class="post link">

        <a href="#" class="permalink">#</a>
        <a class="go" href="<%= script[1][:name] %>"><%= script[1][:title] %></a> Â» <span><%= script[1][:name] %></span> 

